  </nav>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h2 class="text-center hfont">Event Details</h2>
          </div>
          <div class="card-body">
            <p><strong>Event Name:</strong> <%= eventData.event.eventname %></p>
            <p><strong>Event Date:</strong> <%= eventData.event.eventdate %></p>
            <p><strong>Ticket Price:</strong> <%= eventData.event.ticketprice %></p>
            <p><strong>Venue:</strong> <%= eventData.event.venuename %></p>
            <p><strong>Event Type:</strong> <%= eventData.event.etype %></p>
            <p><strong>Contact:</strong> <%= eventData.event.econtact %></p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h2 class="text-center hfont">Venue Details</h2>
          </div>
          <div class="card-body">
            <p><strong>Venue Name:</strong> <%= eventData.venue.venuename %></p>
            <p><strong>Address:</strong> <%= eventData.venue.address %></p>
            <p><strong>Capacity:</strong> <%= eventData.venue.capacity %></p>
            <p><strong>Food/Beverages:</strong> <%= eventData.venue.foodbeverages %></p>
          </div>
        </div>
        <button type="button" class="btn btn-secondary" style="width: 20vw;margin-left: 5vh;background-color: #0F1B24;" id="bookBtn" data-eventid="<%= eventData.event.eventid %>" href="/api/tickets">BOOK</button>

      </div>
    </div>
  </div>
  <footer style="background-color: #0F1B24;margin-top: 10vh;">
    <center><h1 class="hfont" style="font-size:45px;padding:5vh"id="s4">CONTACT US</h1></center>
    <div class="row">
      <div class="col-4" style="padding-left:10vh;color:white">
         <h3>ADDRESS</h3><br>
         <p>JSS Hostel,<br>Srinivaspura,Kengeri,<br>Bangalore-560060</p><br><br>
         <h3>GENERAL ENQUIRES</h3>
         <p>evento@gmail.com<br>+91-990056460<br>+91-9740723439</p>
      </div>
      <div class="col-4" style="padding-left:10vh;color:white">
        <h3 style="margin-top: 34vh;">SOCAL MEDIA</h3><br>
        <i class="fa-brands fa-instagram"></i>
        <i class="fa-brands fa-whatsapp"></i>
        <i class="fa-brands fa-x-twitter"></i>
        <i class="fa-brands fa-facebook"></i>
      </div>
      <div class="col-4">
         <h2 class="hfont" style="font-size:40px;padding: 5vh;">EVENTO</h2>
         <p style="font-size:18px;padding: 2vh;color: white;">
          We are leading event management company <br>dedicatedto bringing your visions to life.<br> Creating unforgettable experiences tailored<br> for your unique requirements.
         </p>
      </div>
    </div>
  </footer>
  <!-- Add additional content or styling as needed -->
</body>

  <script>
  document.getElementById('bookBtn').addEventListener('click', () => {
    const eventId = document.getElementById('bookBtn').getAttribute('data-eventid');
    // Assuming you have the user ID available in your JavaScript code
    const userId = 1; // Replace with the actual user ID

    const bookingData = {
      eventid: eventId,
      userid: userId
      // Add any other relevant data for the booking
    };

    fetch('/api/book', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(bookingData)
    })
    .then(response => {
      if (response.ok) {
        // Redirect to the booking page after successful booking
        window.location.href = '/api/tickets';
      } else {
        console.error('Error booking event');
      }
    })
    .catch(error => {
      console.error('Error booking event:', error);
    });
  });
</script>

</html>
