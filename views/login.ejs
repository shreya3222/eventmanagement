<body class="sign1">
    <form style="background-color: rgba(0, 0, 0, 0);"  action="/login" method="post">
        <center><h1 style="color: white;padding:10vh;" CLASS="hfont">TO USE OUR SERVICES FILL IT..</h1>
        <div class="form-row">
          <div class="col-md-4 mb-3">
            <label for="username">USERNAME</label>
            <input type="text" name="username" class="form-control is-valid" id="username" placeholder="Username"  >
          </div>
          <div class="col-md-4 mb-3">
            <label for="password" >PASSWORD</label>
            <div class="input-group">
              <input type="password" name="password" class="form-control is-valid" id="password" placeholder="Password" aria-describedby="inputGroupPrepend3" >
            </div>
          </div>
        </div>
          <div class="form-group">
            <div class="form-check" style="margin-left: 60vh;">
              <label class="form-check-label" for="invalidCheck3" style="color:white;margin-left:-100vh;margin-bottom:5vh;">
                Don't have a account?<a href="/register">  Register</a>
              </label>
              <div class="invalid-feedback">
                If u already have account.
              </div>
            </div>
          </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form></center>
</body>
